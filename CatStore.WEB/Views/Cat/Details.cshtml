@model CatStore.BLL.DTO.CatDTO

@{
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true" style="font-size:xx-large">&times;</span>
        </button>
    </div>
    <div class="modal-body">
                <div >
                    <img alt="" src="@Model.PhotoUrl" class="img-responsive" />
                </div>
                <div >
                    <h1 style="overflow-wrap: break-word;font-weight:600;font-family: 'Pattaya', sans-serif;">@Model.Name</h1>
                    <ul style="font-size:larger">
                        <li>Имя: @Model.Name</li>
                        <li class="text-success">Цена: @String.Format("{0:0.00}", Model.Cost) BYN</li>
                    </ul>
                </div>
                <div >
                    <h4>Описание</h4>
                    <p>@Model.Description</p>
                </div>
        </div>
</div>

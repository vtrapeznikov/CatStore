@model CatStore.WEB.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
{
    @Html.ActionLink("Главная страница", "Index", "Home")
    @Html.AntiForgeryToken()
    <h2>Вход</h2>
    @Html.ValidationSummary()

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { @placeholder = "Введите email", @type = "email" })
    <br />
    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { @type = "password", @placeholder = "Введите пароль" })
    <br />
    <button type="submit" class="btn btn-primary">Войти</button>
}